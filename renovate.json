{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 6am on monday"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "astro",
        "@astrojs/"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "@biomejs/biome"
      ],
      "postUpgradeTasks": {
        "commands": [
          "npx biome migrate --write"
        ],
        "fileFilters": [
          "**"
        ]
      }
    }
  ]
}
